<div class="w-full flex justify-center">
  <div class="px-6 py-4 w-full max-w-3xl">

    <!-- Breadcrumb -->
    <nav class="flex mb-6 text-sm text-gray-600" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-2">
        <li>
          <a href="<%= account_users_path %>" class="hover:text-blue-600">Users</a>
        </li>
        <li>
          <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7 5l5 5-5 5V5z" clip-rule="evenodd"></path>
          </svg>
        </li>
        <li class="text-gray-800 font-medium">New</li>
      </ol>
    </nav>

    <!-- Center Form Card -->
    <div class="flex justify-center">
      <div class="max-w-lg w-full bg-white shadow-lg border border-gray-100 rounded-xl p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Add a new user</h2>
          <a href="<%= account_users_path %>"
            class="text-sm text-gray-600 hover:text-blue-600 transition">
            ‚Üê Back
          </a>
        </div>

        <p class="text-gray-500 text-sm mb-6">Invite a new team member to your workspace.</p>

        <%= form_with(model: @user, url: account_users_path, id: 'new_user', html: { class: 'space-y-6' }) do |f| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-2 rounded">
              <p class="font-medium"><%= pluralize(@user.errors.count, "error") %> found:</p>
              <ul class="list-disc list-inside text-sm">
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= f.label :name, "Full Name", class: 'block text-sm font-medium text-gray-700 mb-1' %>
            <%= f.text_field :name, placeholder: 'Enter full name',
              class: 'w-full text-lg py-3 px-4 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200 placeholder-gray-400 transition' %>
          </div>

          <div>
            <%= f.label :email, class: 'block text-sm font-medium text-gray-700 mb-1' %>
            <%= f.email_field :email, placeholder: 'Enter email address',
              class: 'w-full text-lg py-3 px-4 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200 placeholder-gray-400 transition' %>
          </div>

          <div>
            <%= f.label :role, class: 'block text-sm font-medium text-gray-700 mb-1' %>
            <%= f.select :role, options_for_select(@choices, 'user'), {},
              class: 'w-full text-lg py-3 px-4 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition' %>
          </div>

          <div class="pt-2">
            <%= f.submit "Invite User",
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 rounded-lg shadow-md hover:shadow-lg transition" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
